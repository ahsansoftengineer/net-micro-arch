    {
      "label": "Run SBA.Auth Debug",
      "command": "dotnet",
      "type": "process",
      "args": [
        "run",
        "--project",
        "${workspaceFolder}/SBA.Auth/SBA.Auth.csproj"
      ],
      "problemMatcher": "$msCompile"
    },
    {
      "label": "Run SBA.Hierarchy Debug",
      "command": "dotnet",
      "type": "process",
      "args": [
        "run",
