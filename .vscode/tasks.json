{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "build-solution",
      "command": "dotnet",
      "type": "process",
      "args": [
        "build",
        "${workspaceFolder}/SBA.sln",
        "/property:GenerateFullPaths=true",
        "/consoleloggerparameters:NoSummary;ForceNoAlign"
      ],
      "problemMatcher": "$msCompile"
    },
    {
      "label": "publish",
      "command": "dotnet",
      "type": "process",
      "args": [
        "publish",
        "${workspaceFolder}/SBA.sln",
        "/property:GenerateFullPaths=true",
        "/consoleloggerparameters:NoSummary;ForceNoAlign"
      ],
      "problemMatcher": "$msCompile"
    },
    {
      "label": "Watch.Debug.Gateway",
      "command": "dotnet",
      "type": "process",
      "args": [
        "watch",
        "run",
        "--project",
        "${workspaceFolder}/SBA.APIGateway/SBA.APIGateway.csproj"
      ],
      "problemMatcher": "$msCompile"
    },
    {
      "label": "Watch.Debug.SBA.Auth",
      "command": "dotnet",
      "type": "process",
      "args": [
        "watch",
        "run",
        "--project",
        "${workspaceFolder}/SBA.Auth/SBA.Auth.csproj"
      ],
      "problemMatcher": "$msCompile"
    },
    {
      "label": "Watch.Debug.SBA.Hierarchy",
      "command": "dotnet",
      "type": "process",
      "args": [
        "watch",
        "run",
        "--project",
        "${workspaceFolder}/SBA.Hierarchy/SBA.Hierarchy.csproj"
      ],
      "problemMatcher": "$msCompile"
    }
  ],
  "compounds": [
    {
      "name": "Run All Services Debug",
      "configurations": [
        "Watch.Debug.Gateway",
        "Watch.Debug.SBA.Auth",
        "Watch.Debug.SBA.Hierarchy"
      ]
    }
  ]
}
