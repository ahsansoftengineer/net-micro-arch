{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Watch All Services (Windows)",
      "type": "shell",
      "command": "./all-run.ps1", // or "powershell ./run-all.ps1" on Windows
      "problemMatcher": []
    },
    {
      "label": "Watch All Services (Ubuntu)",
      "type": "shell",
      "command": "./all-run.sh", // or "powershell ./run-all.ps1" on Windows
      "problemMatcher": []
    },
    {
      "label": "build",
      "command": "dotnet",
      "type": "process",
      "args": [
        "build",
        "${workspaceFolder}/SBA.sln",
        "/property:GenerateFullPaths=true",
        "/consoleloggerparameters:NoSummary;ForceNoAlign"
      ],
      "problemMatcher": "$msCompile"
    },
    {
      "label": "publish",
      "command": "dotnet",
      "type": "process",
      "args": [
        "publish",
        "${workspaceFolder}/SBA.sln",
        "/property:GenerateFullPaths=true",
        "/consoleloggerparameters:NoSummary;ForceNoAlign"
      ],
      "problemMatcher": "$msCompile"
    },
    {
      "label": "Run SBA.APIGateway Debug",
      "command": "dotnet",
      "type": "process",
      "args": [
        "watch",
        "run",
        "--project",
        "${workspaceFolder}/SBA.APIGateway/SBA.APIGateway.csproj"
      ],
      "problemMatcher": "$msCompile"
    },
    {
      "label": "Run SBA.Auth Debug",
      "command": "dotnet",
      "type": "process",
      "args": [
        "watch",
        "run",
        "--project",
        "${workspaceFolder}/SBA.Auth/SBA.Auth.csproj"
      ],
      "problemMatcher": "$msCompile"
    },
    {
      "label": "Run SBA.Hierarchy Debug",
      "command": "dotnet",
      "type": "process",
      "args": [
        "watch",
        "run",
        "--project",
        "${workspaceFolder}/SBA.Hierarchy/SBA.Hierarchy.csproj"
      ],
      "problemMatcher": "$msCompile"
    }
  ],
  "compounds": [
    {
      "name": "Run All Services Debug",
      "configurations": [
        "Run SBA.APIGateway Debug",
        "Run SBA.Auth Debug",
        "Run SBA.Hierarchy Debug"
      ]
    }
  ]
}
