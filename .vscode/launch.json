


{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "SBA.APIGateway",
      "type": "coreclr",
      "request": "launch",
      "stopAtEntry": false,
      "cwd": "${workspaceFolder}/SBA.APIGateway",
      "preLaunchTask": "build-solution",
      "program": "dotnet",
      "args": [
        "watch", "run",
        "--project", "${workspaceFolder}/SBA.APIGateway/SBA.APIGateway.csproj",
        "--launch-profile", "https"
      ],

      "serverReadyAction": {
        "action": "openExternally",
        "pattern": "\\bNow listening on:\\s+(https?://\\S+)",
        "killOnServerStop": true,
        "uriFormat": "%s/api/gateway/v1/swagger/index.html"
      },
      "env": {
        "ASPNETCORE_ENVIRONMENT": "Development"
      }
    },
    {
      "name": "SBA.Auth",
      "type": "coreclr",
      "request": "launch",
      "cwd": "${workspaceFolder}/SBA.Auth",
      "stopAtEntry": false,
      "program": "dotnet",
      "args": [
        "watch", "run",
        "--project", "${workspaceFolder}/SBA.Auth/SBA.Auth.csproj",
        "--launch-profile", "https"
      ]
    },
    {
      "name": "SBA.Hierarchy",
      "type": "coreclr",
      "request": "launch",
      "cwd": "${workspaceFolder}/SBA.Hierarchy",
      "stopAtEntry": false,
      "env": {
        "ASPNETCORE_ENVIRONMENT": "Development"
      },
      "program": "dotnet",
      "args": [
        "watch", "run",
        "--project", "${workspaceFolder}/SBA.Hierarchy/SBA.Hierarchy.csproj",
        "--launch-profile", "https"
      ]
    },
    {
      "name": ".NET Core: Attach to SBA.Hierarchy",
      "type": "coreclr",
      "request": "attach",
      "processId": "${command:pickProcess}"
    }
  ],
  "compounds": [
    {
      "name": "Watch All Services",
      "configurations": [
        "SBA.APIGateway",
        "SBA.Auth",
        "SBA.Hierarchy"
      ]
    }
  ]
}

